<html><body style="background-color: white; width: 100%; min-width: 100%; -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; margin: 0; padding: 0; color: #222222; font-family: Helvetica, Arial, sans-serif; font-weight: normal; text-align: left; line-height: 19px; font-size: 14px;">{% if item.discountedTotal and item.discountedTotal &lt; item.unitPrice.baseAmount %}
	<span class="mz-item-rowtotal is-crossedout" style="text-decoration: line-through;">
		{{ item.unitPrice.baseAmount|currency }}
	</span>
	<br />
	<span class="mz-item-rowtotal {% if item.unitPrice.saleAmount %}is-saleprice{% endif %}">
		{{ item.discountedTotal|currency }}
	</span>
{% else %}
	<span class="mz-item-rowtotal {% if item.unitPrice.saleAmount %}is-saleprice{% endif %}">
		{{ item.extendedTotal|currency }}
	</span>
{% endif %}
</body></html>